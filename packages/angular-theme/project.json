{
  "name": "angular-theme",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "themes/angular-theme/",
  "prefix": "finastra",
  "targets": {
    "build": {
      "executor": "./dist/tools/devkit:theme-builder",
      "options": {
        "inputPath": "themes/angular-theme/lib/",
        "outputPath": "themes/angular-theme/prebuilt-theme",
        "assets": ["themes/angular-theme/lib", "themes/angular-theme/assets", "themes/angular-theme/*.scss"],
        "sourceMap": true
      },
      "configurations": {
        "production": {
          "outputStyle": "compressed"
        }
      }
    },
    "lint": {
      "executor": "./dist/tools/devkit:theme-linter",
      "options": {
        "project": "themes/angular-theme"
      }
    }
  },
  "generators": {
    "@finastra/angular:theme": {
      "styleext": "scss"
    }
  },
  "tags": []
}
